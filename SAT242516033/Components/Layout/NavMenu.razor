@implements IDisposable
@using Microsoft.AspNetCore.Components.Routing
@using SAT242516033.Services
@inject NavigationManager NavigationManager
@inject KullaniciSession KullaniciSession

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">SAT242516033</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<nav class="nav flex-column nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <div class="nav-item px-3">
        <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
            <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
        </NavLink>
    </div>

    <div class="nav-item px-3">
        <NavLink class="nav-link" href="/kullanicilar" Match="NavLinkMatch.Prefix">
            <span class="bi bi-people-fill-nav-menu" aria-hidden="true"></span> Kullanıcılar
        </NavLink>
    </div>

    <div class="nav-item px-3">
        <NavLink class="nav-link" href="/uretim-hatlari" Match="NavLinkMatch.Prefix">
            <span class="bi bi-gear-fill-nav-menu" aria-hidden="true"></span> Üretim Hatları
        </NavLink>
    </div>

    <div class="nav-item px-3">
        <NavLink class="nav-link" href="/hata-tipleri" Match="NavLinkMatch.Prefix">
            <span class="bi bi-exclamation-triangle-fill-nav-menu" aria-hidden="true"></span> Hata Tipleri
        </NavLink>
    </div>

    <div class="nav-item px-3">
        <NavLink class="nav-link" href="/hata-kayitlari" Match="NavLinkMatch.Prefix">
            <span class="bi bi-clipboard-data-fill-nav-menu" aria-hidden="true"></span> Hata Kayıtları
        </NavLink>
    </div>

    <div class="nav-item px-3">
        <NavLink class="nav-link" href="/loglar" Match="NavLinkMatch.Prefix">
            <span class="bi bi-journal-text-nav-menu" aria-hidden="true"></span> Loglar
        </NavLink>
    </div>

    @if (KullaniciSession.IsAuthenticated)
    {
        <div class="nav-item px-3">
            <button class="nav-link btn btn-link p-0" @onclick="OnClick_Logout">
                <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span>
                @KullaniciSession.CurrentUser?.KullaniciAdi (Çıkış)
            </button>
        </div>
    }
    else
    {
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/login" Match="NavLinkMatch.Prefix">
                <span class="bi bi-box-arrow-in-right-nav-menu" aria-hidden="true"></span> Giriş
            </NavLink>
        </div>
    }
</nav>

@code {
    protected override void OnInitialized()
    {
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        StateHasChanged();
    }

    private void OnClick_Logout()
    {
        KullaniciSession.Logout();
        NavigationManager.NavigateTo("/");
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
