@page "/urunler"
@using UrunSiparisTakip.Models
@inject SAT242516033.Services.UrunService UrunService

<PageTitle>Ürünler</PageTitle>

<h3>Ürünler</h3>

@if (_isLoading)
{
    <p>Yükleniyor...</p>
}
else
{
    @if (_mode == "list")
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        <button class="btn btn-outline-success" @onclick="OnClickNew">Yeni</button>
                    </th>
                    <th>UrunId</th>
                    <th>UrunAdi</th>
                    <th>SKU</th>
                    <th>BirimFiyat</th>
                    <th>StokAdet</th>
                    <th>Aktif</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in _urunler)
                {
                    <tr>
                        <td>
                            <button class="btn btn-outline-warning" @onclick="() => OnClickEdit(item)">Düzenle</button>
                            <button class="btn btn-outline-danger" @onclick="() => OnClickRemove(item)">Sil</button>
                        </td>
                        <td>@item.UrunId</td>
                        <td>@item.UrunAdi</td>
                        <td>@item.SKU</td>
                        <td>@item.BirimFiyat</td>
                        <td>@item.StokAdet</td>
                        <td>@(item.AktifMi ? "Evet" : "Hayır")</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    @if (_mode == "new" || _mode == "edit")
    {
        <EditForm Model="_model" OnValidSubmit="OnSubmitAsync">
            <DataAnnotationsValidator />
            <div class="mb-2">
                <label class="form-label">Ürün Adı</label>
                <InputText class="form-control" @bind-Value="_model.UrunAdi" />
            </div>
            <div class="mb-2">
                <label class="form-label">SKU</label>
                <InputText class="form-control" @bind-Value="_model.SKU" />
            </div>
            <div class="mb-2">
                <label class="form-label">Birim Fiyat</label>
                <InputNumber class="form-control" @bind-Value="_model.BirimFiyat" />
            </div>
            <div class="mb-2">
                <label class="form-label">Stok Adet</label>
                <InputNumber class="form-control" @bind-Value="_model.StokAdet" />
            </div>
            <div class="form-check mb-2">
                <InputCheckbox class="form-check-input" @bind-Value="_model.AktifMi" />
                <label class="form-check-label">Aktif</label>
            </div>
            <ValidationSummary />
            <button class="btn btn-success" type="submit">Kaydet</button>
            <button class="btn btn-outline-dark" type="button" @onclick="OnClickCancel">İptal</button>
        </EditForm>
    }

    @if (_mode == "remove")
    {
        <div class="alert alert-warning">
            <p>@_model.UrunAdi ürününü silmek istediğinize emin misiniz?</p>
            <button class="btn btn-danger" @onclick="OnConfirmDeleteAsync">Sil</button>
            <button class="btn btn-outline-dark" @onclick="OnClickCancel">İptal</button>
        </div>
    }
}

@code {
    private bool _isLoading = true;
    private string _mode = "list";
    private Urun _model = new();
    private List<Urun> _urunler = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        _isLoading = true;
        _urunler = await UrunService.GetAllAsync();
        _isLoading = false;
    }

    private void OnClickNew()
    {
        _mode = "new";
        _model = new Urun { AktifMi = true };
    }

    private void OnClickEdit(Urun urun)
    {
        _mode = "edit";
        _model = new Urun
        {
            UrunId = urun.UrunId,
            UrunAdi = urun.UrunAdi,
            SKU = urun.SKU,
            BirimFiyat = urun.BirimFiyat,
            StokAdet = urun.StokAdet,
            AktifMi = urun.AktifMi
        };
    }

    private void OnClickRemove(Urun urun)
    {
        _mode = "remove";
        _model = urun;
    }

    private async Task OnSubmitAsync()
    {
        if (_mode == "new")
        {
            await UrunService.CreateAsync(_model);
        }
        else if (_mode == "edit")
        {
            await UrunService.UpdateAsync(_model);
        }

        _mode = "list";
        await LoadAsync();
    }

    private async Task OnConfirmDeleteAsync()
    {
        await UrunService.DeleteAsync(_model.UrunId);
        _mode = "list";
        await LoadAsync();
    }

    private void OnClickCancel()
    {
        _mode = "list";
    }
}
