@page "/urunler"
@using SAT242516033.Data
@using UrunSiparisTakip.Models
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Forms
@inject ApplicationDbContext Db

<PageTitle>Ürünler</PageTitle>

<h1 class="h3 mb-3">Ürün Yönetimi</h1>
<p class="text-muted">Stok ve fiyat bilgilerinin güncel kalması için ürün kayıtlarını bu sayfa üzerinden yönetin.</p>

@if (list is null)
{
    <div class="alert alert-info">Ürün listesi yükleniyor...</div>
}
else
{
    <div class="card shadow-sm mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Aktif Ürünler (@list.Count)</span>
            <button class="btn btn-sm btn-outline-secondary" @onclick="RefreshAsync">
                <span class="bi bi-arrow-clockwise"></span> Yenile
            </button>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-sm align-middle mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ürün Adı</th>
                        <th>SKU</th>
                        <th class="text-end">Fiyat</th>
                        <th class="text-end">Stok</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in list)
                    {
                        <tr>
                            <td>@u.UrunId</td>
                            <td>@u.UrunAdi</td>
                            <td>@u.SKU</td>
                            <td class="text-end">@u.BirimFiyat.ToString("C")</td>
                            <td class="text-end">@u.StokAdet</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-md-4">
            <div class="card border-success h-100 shadow-sm">
                <div class="card-header fw-semibold">Ürün Ekle</div>
                <div class="card-body">
                    <EditForm Model="newUrun" OnValidSubmit="AddAsync">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <div class="mb-2">
                            <label class="form-label">Ürün Adı</label>
                            <InputText class="form-control form-control-sm" @bind-Value="newUrun.UrunAdi" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">SKU</label>
                            <InputText class="form-control form-control-sm" @bind-Value="newUrun.SKU" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Fiyat</label>
                            <InputNumber class="form-control form-control-sm" TValue="decimal" @bind-Value="newUrun.BirimFiyat" step="0.01" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Stok</label>
                            <InputNumber class="form-control form-control-sm" TValue="int" @bind-Value="newUrun.StokAdet" min="0" />
                        </div>
                        <div class="d-flex gap-2">
                            <button type="reset" class="btn btn-outline-secondary btn-sm">Temizle</button>
                            <button class="btn btn-success btn-sm" type="submit">Kaydet</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-warning h-100 shadow-sm">
                <div class="card-header fw-semibold">Ürün Güncelle</div>
                <div class="card-body">
                    <EditForm Model="updateUrun" OnValidSubmit="UpdateAsync">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <div class="mb-2">
                            <label class="form-label">Ürün Id</label>
                            <InputNumber class="form-control form-control-sm" TValue="int" @bind-Value="updateUrun.UrunId" min="1" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Ürün Adı</label>
                            <InputText class="form-control form-control-sm" @bind-Value="updateUrun.UrunAdi" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">SKU</label>
                            <InputText class="form-control form-control-sm" @bind-Value="updateUrun.SKU" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Fiyat</label>
                            <InputNumber class="form-control form-control-sm" TValue="decimal" @bind-Value="updateUrun.BirimFiyat" step="0.01" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Stok</label>
                            <InputNumber class="form-control form-control-sm" TValue="int" @bind-Value="updateUrun.StokAdet" min="0" />
                        </div>
                        <div class="d-flex gap-2">
                            <button type="reset" class="btn btn-outline-secondary btn-sm">Temizle</button>
                            <button class="btn btn-warning btn-sm" type="submit">Güncelle</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-danger h-100 shadow-sm">
                <div class="card-header fw-semibold">Ürün Sil</div>
                <div class="card-body">
                    <EditForm Model="removeModel" OnValidSubmit="RemoveAsync">
                        <div class="mb-3">
                            <label class="form-label">Ürün Id</label>
                            <InputNumber class="form-control form-control-sm" TValue="int?" @bind-Value="removeModel.Id" min="1" />
                        </div>
                        <div class="d-flex gap-2">
                            <button type="reset" class="btn btn-outline-secondary btn-sm">Temizle</button>
                            <button class="btn btn-danger btn-sm" type="submit">Sil</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Urun>? list;

    private Urun newUrun = new();
    private Urun updateUrun = new();

    private sealed class RemoveDto { public int? Id { get; set; } }
    private RemoveDto removeModel = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        list = await Db.Urunler.OrderBy(x => x.UrunId).ToListAsync();
    }

    private async Task RefreshAsync()
    {
        await LoadAsync();
        StateHasChanged();
    }

    private async Task AddAsync()
    {
        Db.Urunler.Add(newUrun);
        await Db.SaveChangesAsync();
        newUrun = new();
        await RefreshAsync();
    }

    private async Task UpdateAsync()
    {
        var ent = await Db.Urunler.FindAsync(updateUrun.UrunId);
        if (ent is not null)
        {
            ent.UrunAdi = updateUrun.UrunAdi;
            ent.SKU = updateUrun.SKU;
            ent.BirimFiyat = updateUrun.BirimFiyat;
            ent.StokAdet = updateUrun.StokAdet;
            await Db.SaveChangesAsync();
            updateUrun = new();
            await RefreshAsync();
        }
    }

    private async Task RemoveAsync()
    {
        if (removeModel.Id is null)
        {
            return;
        }

        var ent = await Db.Urunler.FindAsync(removeModel.Id.Value);
        if (ent is not null)
        {
            Db.Urunler.Remove(ent);
            await Db.SaveChangesAsync();
            removeModel = new();
            await RefreshAsync();
        }
    }
}
