@page "/siparisler"
@using UrunSiparisTakip.Models
@inject SAT242516033.Services.SiparisService SiparisService
@inject SAT242516033.Services.MusteriService MusteriService
@inject SAT242516033.Services.UrunService UrunService

<PageTitle>Siparişler</PageTitle>

<h3>Siparişler</h3>

@if (_isLoading)
{
    <p>Yükleniyor...</p>
}
else
{
    @if (_mode == "list")
    {
        <button class="btn btn-outline-success mb-2" @onclick="OnClickNew">Yeni Sipariş</button>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>İşlem</th>
                    <th>SiparisId</th>
                    <th>Müşteri</th>
                    <th>Tarih</th>
                    <th>Durum</th>
                    <th>Toplam</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var siparis in _siparisler)
                {
                    <tr>
                        <td>
                            <button class="btn btn-outline-primary" @onclick="() => OnSelectOrder(siparis)">Detay</button>
                            <button class="btn btn-outline-danger" @onclick="() => OnDeleteOrderAsync(siparis.SiparisId)">Sil</button>
                        </td>
                        <td>@siparis.SiparisId</td>
                        <td>@siparis.Musteri.Ad @siparis.Musteri.Soyad</td>
                        <td>@siparis.SiparisTarihi.ToString("g")</td>
                        <td>@siparis.Durum</td>
                        <td>@GetOrderTotal(siparis)</td>
                    </tr>
                }
            </tbody>
        </table>

        @if (_selectedOrder != null)
        {
            <div class="card mt-3">
                <div class="card-header">Sipariş Detayı</div>
                <div class="card-body">
                    <p><strong>Müşteri:</strong> @_selectedOrder.Musteri.Ad @_selectedOrder.Musteri.Soyad</p>
                    <p><strong>Tarih:</strong> @_selectedOrder.SiparisTarihi.ToString("g")</p>
                    <div class="mb-2">
                        <label class="form-label">Durum</label>
                        <select class="form-select" @bind="_selectedOrderStatus">
                            @foreach (var durum in _durumler)
                            {
                                <option value="@durum">@durum</option>
                            }
                        </select>
                    </div>
                    <button class="btn btn-primary mb-3" @onclick="OnUpdateStatusAsync">Durumu Güncelle</button>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Ürün</th>
                                <th>Miktar</th>
                                <th>Birim Fiyat</th>
                                <th>Tutar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detay in _selectedOrder.Detaylar)
                            {
                                <tr>
                                    <td>@detay.Urun.UrunAdi</td>
                                    <td>@detay.Miktar</td>
                                    <td>@detay.BirimFiyat</td>
                                    <td>@(detay.Miktar * detay.BirimFiyat)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    }

    @if (_mode == "new")
    {
        <div class="card">
            <div class="card-header">Sipariş Oluştur</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-2">
                        <label class="form-label">Müşteri</label>
                        <select class="form-select" @bind="_selectedMusteriId">
                            <option value="">Seçiniz</option>
                            @foreach (var musteri in _musteriler)
                            {
                                <option value="@musteri.MusteriId">@musteri.Ad @musteri.Soyad</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6 mb-2">
                        <label class="form-label">Durum</label>
                        <select class="form-select" @bind="_selectedDurum">
                            @foreach (var durum in _durumler)
                            {
                                <option value="@durum">@durum</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="border rounded p-2 mb-3">
                    <h6>Ürün Ekle</h6>
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <label class="form-label">Ürün</label>
                            <select class="form-select" @bind="_selectedUrunId">
                                <option value="">Seçiniz</option>
                                @foreach (var urun in _urunler)
                                {
                                    <option value="@urun.UrunId">@urun.UrunAdi (@urun.SKU)</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3 mb-2">
                            <label class="form-label">Birim Fiyat</label>
                            <InputNumber class="form-control" @bind-Value="_birimFiyat" />
                        </div>
                        <div class="col-md-3 mb-2">
                            <label class="form-label">Miktar</label>
                            <InputNumber class="form-control" @bind-Value="_miktar" />
                        </div>
                    </div>
                    <button class="btn btn-outline-primary" @onclick="OnAddLine">Ürünü Ekle</button>
                </div>

                @if (_lines.Count > 0)
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Ürün</th>
                                <th>Miktar</th>
                                <th>Birim Fiyat</th>
                                <th>Tutar</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var line in _lines)
                            {
                                <tr>
                                    <td>@line.UrunAdi</td>
                                    <td>@line.Miktar</td>
                                    <td>@line.BirimFiyat</td>
                                    <td>@(line.Miktar * line.BirimFiyat)</td>
                                    <td>
                                        <button class="btn btn-outline-danger" @onclick="() => OnRemoveLine(line)">Kaldır</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="mb-2">
                        <strong>Toplam:</strong> @(_lines.Sum(l => l.Miktar * l.BirimFiyat))
                    </div>
                }

                @if (!string.IsNullOrWhiteSpace(_message))
                {
                    <div class="alert alert-warning">@_message</div>
                }

                <button class="btn btn-success" @onclick="OnCreateOrderAsync">Sipariş Oluştur</button>
                <button class="btn btn-outline-dark" @onclick="OnClickCancel">İptal</button>
            </div>
        </div>
    }
}

@code {
    private bool _isLoading = true;
    private string _mode = "list";
    private List<Siparis> _siparisler = new();
    private List<Musteri> _musteriler = new();
    private List<Urun> _urunler = new();
    private Siparis? _selectedOrder;
    private string _selectedOrderStatus = "Beklemede";
    private int? _selectedMusteriId;
    private string _selectedDurum = "Beklemede";
    private int? _selectedUrunId;
    private decimal _birimFiyat;
    private int _miktar = 1;
    private readonly List<string> _durumler = new() { "Beklemede", "Onaylandı", "Kargoda", "Tamamlandı", "İptal" };
    private List<OrderLine> _lines = new();
    private string? _message;

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        _isLoading = true;
        _siparisler = await SiparisService.GetAllAsync();
        _musteriler = await MusteriService.GetAllAsync();
        _urunler = await UrunService.GetAllAsync();
        _isLoading = false;
    }

    private void OnClickNew()
    {
        _mode = "new";
        _lines = new List<OrderLine>();
        _selectedMusteriId = null;
        _selectedUrunId = null;
        _birimFiyat = 0;
        _miktar = 1;
        _message = null;
    }

    private void OnClickCancel()
    {
        _mode = "list";
        _message = null;
    }

    private void OnAddLine()
    {
        _message = null;
        if (!_selectedUrunId.HasValue)
        {
            _message = "Lütfen ürün seçiniz.";
            return;
        }

        var urun = _urunler.FirstOrDefault(u => u.UrunId == _selectedUrunId.Value);
        if (urun == null)
        {
            _message = "Ürün bulunamadı.";
            return;
        }

        var fiyat = _birimFiyat > 0 ? _birimFiyat : urun.BirimFiyat;
        var mevcut = _lines.FirstOrDefault(l => l.UrunId == urun.UrunId);
        if (mevcut != null)
        {
            mevcut.Miktar += _miktar;
            mevcut.BirimFiyat = fiyat;
        }
        else
        {
            _lines.Add(new OrderLine
            {
                UrunId = urun.UrunId,
                UrunAdi = urun.UrunAdi,
                Miktar = _miktar,
                BirimFiyat = fiyat
            });
        }

        _selectedUrunId = null;
        _birimFiyat = 0;
        _miktar = 1;
    }

    private void OnRemoveLine(OrderLine line)
    {
        _lines.Remove(line);
    }

    private async Task OnCreateOrderAsync()
    {
        _message = null;
        if (!_selectedMusteriId.HasValue)
        {
            _message = "Lütfen müşteri seçiniz.";
            return;
        }

        if (_lines.Count == 0)
        {
            _message = "En az bir ürün ekleyiniz.";
            return;
        }

        var detaylar = _lines.Select(l => new SiparisDetayi
        {
            UrunId = l.UrunId,
            Miktar = l.Miktar,
            BirimFiyat = l.BirimFiyat
        }).ToList();

        await SiparisService.CreateAsync(_selectedMusteriId.Value, _selectedDurum, detaylar);
        _mode = "list";
        await LoadAsync();
    }

    private void OnSelectOrder(Siparis siparis)
    {
        _selectedOrder = siparis;
        _selectedOrderStatus = siparis.Durum;
    }

    private async Task OnUpdateStatusAsync()
    {
        if (_selectedOrder == null)
        {
            return;
        }

        _selectedOrder.Durum = _selectedOrderStatus;
        await SiparisService.UpdateAsync(_selectedOrder);
        await LoadAsync();
        _selectedOrder = _siparisler.FirstOrDefault(s => s.SiparisId == _selectedOrder.SiparisId);
    }

    private async Task OnDeleteOrderAsync(int siparisId)
    {
        await SiparisService.DeleteAsync(siparisId);
        await LoadAsync();
        _selectedOrder = null;
    }

    private decimal GetOrderTotal(Siparis siparis) =>
        siparis.Detaylar.Sum(d => d.Miktar * d.BirimFiyat);

    private class OrderLine
    {
        public int UrunId { get; set; }
        public string UrunAdi { get; set; } = string.Empty;
        public int Miktar { get; set; }
        public decimal BirimFiyat { get; set; }
    }
}
