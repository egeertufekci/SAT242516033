@page "/siparisler"
@using Microsoft.EntityFrameworkCore
@using SAT242516033.Data
@using UrunSiparisTakip.Models

@inject ApplicationDbContext Db

<PageTitle>Siparişler</PageTitle>

<h2 class="mt-3">Siparişler</h2>
<p class="text-secondary">Ürünleri sepetinize ekleyip mevcut müşteriler için sipariş oluşturun.</p>

@if (urunler is null || musteriler is null)
{
    <p>Veriler yükleniyor...</p>
}
else if (_operation == "list")
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <button class="btn btn-outline-success" @onclick="YeniSiparis">Yeni Sipariş</button>
        <button class="btn btn-outline-primary" @onclick="YenileAsync">Listeyi Yenile</button>
    </div>

    <div class="row g-4 align-items-start">
        <div class="col-lg-7">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white fw-semibold">Ürünler</div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Ad</th>
                                    <th>SKU</th>
                                    <th class="text-end">Fiyat</th>
                                    <th class="text-end">Stok</th>
                                    <th class="text-end"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var u in urunler)
                                {
                                    <tr>
                                        <td>@u.UrunAdi</td>
                                        <td>@u.SKU</td>
                                        <td class="text-end">@u.BirimFiyat.ToString("N2")</td>
                                        <td class="text-end">@u.StokAdet</td>
                                        <td class="text-end">
                                            <button class="btn btn-sm btn-outline-primary"
                                                    @onclick="() => SepeteEkle(u)"
                                                    disabled="@(u.StokAdet <= 0)">
                                                Sepete Ekle
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-secondary text-white fw-semibold">Müşteri</div>
                <div class="card-body">
                    <div class="mb-2">
                        <label class="form-label">Sipariş Sahibi</label>
                        <InputSelect class="form-select" @bind-Value="secilenMusteriId">
                            <option value="">-- Seçiniz --</option>
                            @foreach (var m in musteriler)
                            {
                                <option value="@m.MusteriId">@m.Ad @m.Soyad</option>
                            }
                        </InputSelect>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-success text-white fw-semibold">Sepet</div>
                <div class="card-body p-0">
                    @if (!sepet.Any())
                    {
                        <div class="p-3 text-muted">Sepet boş.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm align-middle mb-0">
                                <thead>
                                    <tr>
                                        <th>Ürün</th>
                                        <th class="text-end">Adet</th>
                                        <th class="text-end">Birim</th>
                                        <th class="text-end">Tutar</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in sepet)
                                    {
                                        <tr>
                                            <td>@item.UrunAdi</td>
                                            <td class="text-end" style="width: 140px;">
                                                <input type="number"
                                                       class="form-control form-control-sm text-end"
                                                       min="1"
                                                       max="@item.Stok"
                                                       value="@item.Adet"
                                                       @onchange="(e) => AdetGuncelle(item, e.Value?.ToString())" />
                                                <small class="text-muted">Stok: @item.Stok</small>
                                            </td>
                                            <td class="text-end">@item.BirimFiyat.ToString("N2")</td>
                                            <td class="text-end">@item.Toplam.ToString("N2")</td>
                                            <td class="text-end">
                                                <button class="btn btn-outline-danger btn-sm"
                                                        title="Sil"
                                                        @onclick="() => SepettenKaldir(item.UrunId)">
                                                    <span class="bi bi-x-lg" aria-hidden="true"></span>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <th colspan="3">Genel Toplam</th>
                                        <th class="text-end">@sepet.Sum(x => x.Toplam).ToString("N2")</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                        <div class="d-flex justify-content-end gap-2 p-3">
                            <button class="btn btn-outline-secondary" @onclick="SepetiTemizle">Temizle</button>
                            <button class="btn btn-success"
                                    @onclick="SiparisOlusturAsync"
                                    disabled="@(sepet.Count == 0 || !secilenMusteriId.HasValue)">
                                Sipariş Ver
                            </button>
                        </div>
                    }
                </div>
            </div>

            @if (!string.IsNullOrWhiteSpace(bilgiMesaji))
            {
                <div class="alert alert-info mt-3" role="alert">@bilgiMesaji</div>
            }
            @if (!string.IsNullOrWhiteSpace(hataMesaji))
            {
                <div class="alert alert-danger mt-3" role="alert">@hataMesaji</div>
            }
        </div>
    </div>
}

@code {
    private string _operation = "list";

    private List<Urun>? urunler;
    private List<Musteri>? musteriler;

    private readonly List<SepetElemani> sepet = new();
    private int? secilenMusteriId;

    private string? bilgiMesaji;
    private string? hataMesaji;

    protected override async Task OnInitializedAsync()
    {
        await YenileAsync();
    }

    private async Task YenileAsync()
    {
        urunler = await Db.Urunler.OrderBy(u => u.UrunAdi).ToListAsync();
        musteriler = await Db.Musteriler.OrderBy(m => m.Ad).ThenBy(m => m.Soyad).ToListAsync();
        StateHasChanged();
    }

    private void YeniSiparis()
    {
        _operation = "list";
        SepetiTemizle();
    }

    private void SepeteEkle(Urun urun)
    {
        hataMesaji = null;
        bilgiMesaji = null;

        var mevcut = sepet.FirstOrDefault(s => s.UrunId == urun.UrunId);

        if (mevcut is null)
        {
            sepet.Add(new SepetElemani
            {
                UrunId = urun.UrunId,
                UrunAdi = urun.UrunAdi,
                BirimFiyat = urun.BirimFiyat,
                Stok = urun.StokAdet,
                Adet = 1
            });
            return;
        }

        if (mevcut.Adet < urun.StokAdet)
        {
            mevcut.Adet++;
        }
        else
        {
            hataMesaji = "Stok yetersiz. Daha fazla eklenemez.";
        }
    }

    private void AdetGuncelle(SepetElemani item, string? yeniDeger)
    {
        hataMesaji = null;
        bilgiMesaji = null;

        if (item is null)
            return;

        if (!int.TryParse(yeniDeger, out var adet))
            return;

        if (adet < 1)
            adet = 1;

        if (adet > item.Stok)
        {
            adet = item.Stok;
            hataMesaji = "Seçilen adet stok miktarını aşamaz.";
        }

        item.Adet = adet;
    }

    private void SepettenKaldir(int urunId)
    {
        hataMesaji = null;
        bilgiMesaji = null;

        var silinecek = sepet.FirstOrDefault(x => x.UrunId == urunId);
        if (silinecek is not null)
            sepet.Remove(silinecek);
    }

    private void SepetiTemizle()
    {
        sepet.Clear();
        secilenMusteriId = null;
        bilgiMesaji = null;
        hataMesaji = null;
    }

    private async Task SiparisOlusturAsync()
    {
        hataMesaji = null;
        bilgiMesaji = null;

        if (!secilenMusteriId.HasValue)
        {
            hataMesaji = "Lütfen bir müşteri seçiniz.";
            return;
        }

        if (!sepet.Any())
        {
            hataMesaji = "Sepet boş. Lütfen ürün ekleyiniz.";
            return;
        }

       
        var urunIdler = sepet.Select(s => s.UrunId).ToList();
        var dbUrunler = await Db.Urunler.Where(u => urunIdler.Contains(u.UrunId)).ToListAsync();

        foreach (var item in sepet)
        {
            var u = dbUrunler.FirstOrDefault(x => x.UrunId == item.UrunId);
            if (u is null)
            {
                hataMesaji = "Sepetteki ürünlerden biri bulunamadı.";
                return;
            }

            if (u.StokAdet < item.Adet)
            {
                hataMesaji = $"{u.UrunAdi} için stok yetersiz. Mevcut stok: {u.StokAdet}";
                return;
            }
        }

        var siparis = new Siparis
        {
            MusteriId = secilenMusteriId.Value,
            SiparisTarihi = DateTime.Now,
            Durum = "Beklemede"
        };

        foreach (var item in sepet)
        {
            siparis.Detaylar.Add(new SiparisDetayi
            {
                UrunId = item.UrunId,
                Miktar = item.Adet,
                BirimFiyat = item.BirimFiyat
            });

            var u = dbUrunler.First(x => x.UrunId == item.UrunId);
            u.StokAdet -= item.Adet;
        }

        Db.Siparisler.Add(siparis);
        await Db.SaveChangesAsync();

        sepet.Clear();
        bilgiMesaji = "Sipariş başarıyla oluşturuldu.";

        await YenileAsync();
    }

    private sealed class SepetElemani
    {
        public int UrunId { get; set; }
        public string UrunAdi { get; set; } = string.Empty;
        public decimal BirimFiyat { get; set; }

        public int Adet { get; set; }
        public int Stok { get; set; }

        public decimal Toplam => BirimFiyat * Adet;
    }
}
