@page "/Raporlar/pdf-olustur"

@using SAT242516033.Data
@using SAT242516033.Models.MyDbModels
@using SAT242516033.Models.Providers
@using SAT242516033.Models.MyReports
@using QuestPDF.Fluent
@using Microsoft.AspNetCore.Authorization @* KRİTİK: Authorize hatasını bu satır çözer *@

@inject IMyDbModel_Provider DbProvider
@attribute [Authorize]

<div class="container-fluid" style="height: 90vh;">
    <div class="d-flex justify-content-between align-items-center mb-2 pt-2">
        <h3 class="fw-bold"><i class="bi bi-file-earmark-pdf"></i> Ürün Stok Raporu</h3>
    </div>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else if (pdfDataUrl == null)
    {
        <div class="alert alert-info d-flex align-items-center shadow-sm">
            <div class="spinner-border spinner-border-sm text-primary me-3"></div>
            <div>
                <strong>PDF Hazırlanıyor...</strong><br />
                <small>Ürün listesi işleniyor, lütfen bekleyiniz.</small>
            </div>
        </div>
    }
    else
    {
        <iframe src="@pdfDataUrl" style="width: 100%; height: 95%; border: 1px solid #ccc; border-radius: 8px;"></iframe>
    }
</div>

@code {
    private string? pdfDataUrl;
    private string? errorMessage;
    public IMyDbModel<Urun> Model { get; set; } = new MyDbModel<Urun>();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                await Task.Delay(100);

                // Ürün raporu için SP'yi çağırıyoruz
                var sonuc = await DbProvider.Execute(new MyDbModel<Urun>(), "sp_UrunRaporu", false);

                if (sonuc?.Items != null && sonuc.Items.Any())
                {
                    var urunler = sonuc.Items.ToList();

                    // PDF oluşturma işlemini arka plana alıyoruz
                    var pdfBytes = await Task.Run(() =>
                    {
                        var report = new Report_Urun(urunler);
                        return report.GeneratePdf();
                    });

                    pdfDataUrl = $"data:application/pdf;base64,{Convert.ToBase64String(pdfBytes)}";
                }
                else
                {
                    errorMessage = "Raporlanacak ürün verisi bulunamadı.";
                }
            }
            catch (Exception ex)
            {
                errorMessage = "Hata: " + ex.Message;
            }

            StateHasChanged();
        }
    }
}