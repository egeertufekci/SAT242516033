@page "/musteriler"
@using UrunSiparisTakip.Models
@inject SAT242516033.Services.MusteriService MusteriService

<PageTitle>Musteriler</PageTitle>

<h3>Musteriler</h3>

@if (_isLoading)
{
    <p>Yükleniyor...</p>
}
else
{
    @if (_mode == "list")
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        <button class="btn btn-outline-success" @onclick="OnClickNew">Yeni</button>
                    </th>
                    <th>MusteriId</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in _musteriler)
                {
                    <tr>
                        <td>
                            <button class="btn btn-outline-warning" @onclick="() => OnClickEdit(item)">Düzenle</button>
                            <button class="btn btn-outline-danger" @onclick="() => OnClickRemove(item)">Sil</button>
                        </td>
                        <td>@item.MusteriId</td>
                        <td>@item.Ad</td>
                        <td>@item.Soyad</td>
                        <td>@item.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    @if (_mode == "new" || _mode == "edit")
    {
        <EditForm Model="_model" OnValidSubmit="OnSubmitAsync">
            <DataAnnotationsValidator />
            <div class="mb-2">
                <label class="form-label">Ad</label>
                <InputText class="form-control" @bind-Value="_model.Ad" />
            </div>
            <div class="mb-2">
                <label class="form-label">Soyad</label>
                <InputText class="form-control" @bind-Value="_model.Soyad" />
            </div>
            <div class="mb-2">
                <label class="form-label">Email</label>
                <InputText class="form-control" @bind-Value="_model.Email" />
            </div>
            <ValidationSummary />
            <button class="btn btn-success" type="submit">Kaydet</button>
            <button class="btn btn-outline-dark" type="button" @onclick="OnClickCancel">İptal</button>
        </EditForm>
    }

    @if (_mode == "remove")
    {
        <div class="alert alert-warning">
            <p>@_model.Ad @_model.Soyad müşterisini silmek istediğinize emin misiniz?</p>
            <button class="btn btn-danger" @onclick="OnConfirmDeleteAsync">Sil</button>
            <button class="btn btn-outline-dark" @onclick="OnClickCancel">İptal</button>
        </div>
    }
}

@code {
    private bool _isLoading = true;
    private string _mode = "list";
    private Musteri _model = new();
    private List<Musteri> _musteriler = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        _isLoading = true;
        _musteriler = await MusteriService.GetAllAsync();
        _isLoading = false;
    }

    private void OnClickNew()
    {
        _mode = "new";
        _model = new Musteri();
    }

    private void OnClickEdit(Musteri musteri)
    {
        _mode = "edit";
        _model = new Musteri
        {
            MusteriId = musteri.MusteriId,
            Ad = musteri.Ad,
            Soyad = musteri.Soyad,
            Email = musteri.Email
        };
    }

    private void OnClickRemove(Musteri musteri)
    {
        _mode = "remove";
        _model = musteri;
    }

    private async Task OnSubmitAsync()
    {
        if (_mode == "new")
        {
            await MusteriService.CreateAsync(_model);
        }
        else if (_mode == "edit")
        {
            await MusteriService.UpdateAsync(_model);
        }

        _mode = "list";
        await LoadAsync();
    }

    private async Task OnConfirmDeleteAsync()
    {
        await MusteriService.DeleteAsync(_model.MusteriId);
        _mode = "list";
        await LoadAsync();
    }

    private void OnClickCancel()
    {
        _mode = "list";
    }
}
